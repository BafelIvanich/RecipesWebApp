@{
    ViewData["Title"] = "Home Page";
}
<h2>Рецепты</h2>

<div class="container">
    <div class="row">
        @foreach (var recipe in Model)
        {
            @await Html.PartialAsync("_RecipeCard", (Recipe)recipe)
        }
    </div>
</div>

<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 450px;
        display:flex;
        flex-direction:column;
    }

    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
        flex-shrink: 0;
    }

    .card-body{
        padding:1rem;
        flex:1;
        display:flex;
        flex-direction:column;
        overflow:hidden;
    }

    
    .card-hover:hover {
        transform: scale(1.05); 
        box-shadow: 4px 4px 15px rgba(0, 0, 0, 0.2); 
    }

    .ingredients-list {
        flex: 1;
        overflow: hidden;
        position: relative;
        margin-bottom: 1rem;
    }

        .ingredients-list ul {
            list-style: none;
            padding-left: 0;
            margin: 0;
            max-height: 150px;
            overflow: hidden;
        }

            .ingredients-list ul::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 30px;
                background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,0.9) 100%);
            }

        .ingredients-list li {
            margin-bottom: 0.3rem;
            line-height: 1.3;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    .card-footer-buttons {
        padding-top: 1rem;
        border-top: 1px solid rgba(0,0,0,0.1);
        margin-top: auto;
    }

    .favorite-btn {
        padding: 0.375rem 0.75rem;
        transition: all 0.3s ease;
    }

        .favorite-btn:hover .fa-heart {
            transform: scale(1.2);
        }

    .fa-heart {
        transition: transform 0.3s ease;
    }

    .favorite-btn.active .fa-heart {
        color: #dc3545;
    }
</style>

<script>
    document.querySelectorAll('.favorite-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const recipeId = this.dataset.recipeId;
                this.classList.toggle('active');
                this.querySelector('.fa-heart').classList.toggle('fas');
                this.querySelector('.fa-heart').classList.toggle('far');

                try {
                    const response = await fetch(`/Recipes/ToggleFavorite?recipeId=${recipeId}`, {
                        method: 'POST'
                    });

                    if (!response.ok) {
                        throw new Error('Failed to update favorites');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    this.classList.toggle('active');
                    this.querySelector('.fa-heart').classList.toggle('fas');
                    this.querySelector('.fa-heart').classList.toggle('far');
                }
            });
        });
</script>