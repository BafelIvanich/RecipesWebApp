@{
    ViewData["Title"] = "Home Page";
}
<h2>Рецепты</h2>

<div class="container">
    <div class="row">
        @foreach (var recipe in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3 card-hover">
                    <img src="@(!string.IsNullOrEmpty(recipe.ImageUrl) ? recipe.ImageUrl : "/images/placeholder.jpg")"
                    class="card-img-top" alt="Recipe Image" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@recipe.Name</h5>
                        <p class="card-text"><strong>Cooking Time:</strong> @recipe.Time minutes</p>

                        <h6>Ingredients:</h6>
                        <ul>
                            @foreach (var ri in recipe.RecipeIngredients)
                            {
                                <li>@ri.Ingredient.Name - @ri.Quantity @ri.Unit</li>
                            }
                        </ul>

                        <a href="@Url.Action("Details", "Recipes", new { id = recipe.Id })" class="btn btn-primary">View Recipe</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth transition for transform and box-shadow */
    }

    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    /* Hover effect: scale up the card and apply a larger shadow */
    .card-hover:hover {
        transform: scale(1.05); /* Scales the card to 105% of its original size */
        box-shadow: 4px 4px 15px rgba(0, 0, 0, 0.2); /* Increased shadow for a floating effect */
    }
</style>
